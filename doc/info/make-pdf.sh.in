#!/bin/sh

TEXIFILE=$1
BASEFILE=`basename $TEXIFILE .texi`
INTERACTION="-interaction=nonstopmode"
build () {
    pdftex -etex $INTERACTION $TEXIFILE
    if [ $? -ne 0 ]; then
	exit 1
    fi
    @SED@ --in-place=bak -E 's/^(.*)\{([^!]+)!([^}]+)\}[ ]*$$/\1{\2}{\3}/' $BASEFILE.dc
    ./texindex $BASEFILE.dc
}

set -x
build
build
build
